{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_cp2k/json_schemas/1.0/cp2k_run",
    "name": "biobb_cp2k Cp2kRun",
    "title": "Wrapper of the CP2K QM tool module.",
    "description": "Runs atomistic simulations of solid state, liquid, molecular, periodic, material, crystal, and biological systems using CP2K QM tool.",
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "CP2K",
            "version": ">=7.1.0",
            "license": "GPL-2.0",
            "multinode": "mpi"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "input_inp_path",
        "output_log_path",
        "output_outzip_path",
        "output_rst_path"
    ],
    "properties": {
        "input_inp_path": {
            "type": "string",
            "description": "Input configuration file (CP2K run options)",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_cp2k/raw/master/biobb_cp2k/test/data/cp2k/cp2k_energy.inp",
            "enum": [
                ".*\\.inp$",
                ".*\\.in$",
                ".*\\.txt$",
                ".*\\.wfn$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.inp$",
                    "description": "Input configuration file (CP2K run options)",
                    "edam": "format_2330"
                },
                {
                    "extension": ".*\\.in$",
                    "description": "Input configuration file (CP2K run options)",
                    "edam": "format_2330"
                },
                {
                    "extension": ".*\\.txt$",
                    "description": "Input configuration file (CP2K run options)",
                    "edam": "format_2330"
                },
                {
                    "extension": ".*\\.wfn$",
                    "description": "Input configuration file (CP2K run options)",
                    "edam": "format_2333"
                }
            ]
        },
        "output_log_path": {
            "type": "string",
            "description": "Output log file",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_cp2k/raw/master/biobb_cp2k/test/reference/cp2k/cp2k_run_out.log",
            "enum": [
                ".*\\.log$",
                ".*\\.out$",
                ".*\\.txt$",
                ".*\\.o$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.log$",
                    "description": "Output log file",
                    "edam": "format_2330"
                },
                {
                    "extension": ".*\\.out$",
                    "description": "Output log file",
                    "edam": "format_2330"
                },
                {
                    "extension": ".*\\.txt$",
                    "description": "Output log file",
                    "edam": "format_2330"
                },
                {
                    "extension": ".*\\.o$",
                    "description": "Output log file",
                    "edam": "format_2330"
                }
            ]
        },
        "output_outzip_path": {
            "type": "string",
            "description": "Output files",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_cp2k/raw/master/biobb_cp2k/test/reference/cp2k/cp2k_run_out.zip",
            "enum": [
                ".*\\.zip$",
                ".*\\.gzip$",
                ".*\\.gz$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.zip$",
                    "description": "Output files",
                    "edam": "format_3987"
                },
                {
                    "extension": ".*\\.gzip$",
                    "description": "Output files",
                    "edam": "format_3987"
                },
                {
                    "extension": ".*\\.gz$",
                    "description": "Output files",
                    "edam": "format_3987"
                }
            ]
        },
        "output_rst_path": {
            "type": "string",
            "description": "Output restart file",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_cp2k/raw/master/biobb_cp2k/test/reference/cp2k/cp2k_run_out.wfn",
            "enum": [
                ".*\\.wfn$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.wfn$",
                    "description": "Output restart file",
                    "edam": "format_2333"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "binary_path": {
                    "type": "string",
                    "default": "cp2k.sopt",
                    "wf_prop": false,
                    "description": "CP2K binary path to be used."
                },
                "param_path": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Path to the CP2K parameter data files (BASIS_SET, POTENTIALS, etc.). If not provided, the parameter data files included in the package will be used."
                },
                "mpi_bin": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Path to the MPI runner. Usually \"mpirun\" or \"srun\"."
                },
                "mpi_np": {
                    "type": "integer",
                    "default": 0,
                    "wf_prop": false,
                    "description": "Number of MPI processes. Usually an integer bigger than 1.",
                    "min": 0,
                    "max": 1000,
                    "step": 1
                },
                "mpi_flags": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Path to the MPI hostlist file."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}